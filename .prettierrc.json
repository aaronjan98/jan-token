{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "endOfLine": "lf",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "requirePragma": false,
        "insertPragma": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "endOfLine": "lf",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "requirePragma": false,
        "insertPragma": false
      }
    }
  ]
}
